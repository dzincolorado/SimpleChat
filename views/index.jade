extends layout

block content		
	h3 Twitter User Data
	br
	//- this is a comment
	//- p= 'Currently logged in as ' + user.username 
		span 
			a(href="/logout") Logout
	br
	br
	div(class="container")
		form(action='/send', method='POST', class='well')
			fieldset
		
				div(id="tabs")
					ul
						li
							a(href="#tabs-1") Local
						li
							a(href="#tabs-2") Public Timeline
					div(id="tabs-1")
					
						label Tweet or Hash tag: 
						div(class="control-group")
							div(class="controls")
								div(class="input-append")
								input(type='text', length='140', name='tweet', class='span3', placeholder='Type something...')
								input(type='submit', value='Tweet it!', class='btn')
						span(class='help-block') 140 characters or less
					
						- if(tweets != null)
							ul
								each t in tweets
									li 
										small= t.content
											em= ' posted on ' + t.createDate.toLocaleDateString() + ' ' + t.createDate.toLocaleTimeString()
						- else
							div(class='alert alert-info') We are tweetless.
							//- !=partial('partials/chirp', {locals: {tweets: tweets}})
					div(id="tabs-2")
						input(type='button', value='Show Public Timeline', class='btn btn-inverse', id="btnGetTimeLine")
						br
						br
						ul
							li results go heer
		